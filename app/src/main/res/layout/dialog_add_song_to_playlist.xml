<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog_library_addsong"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvAddToPlaylist"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:padding="10dp"
        android:text="@string/popup_playlist_text_add"
        android:textColor="@color/all_white"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_library_addsongtoplaylist" />

    <View
        android:layout_marginEnd="12dp"
        android:layout_gravity="end"
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:background="#888888" />

    <TextView
        android:id="@+id/tvShareSong"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:padding="8dp"
        android:text="@string/popup_playlist_text_share"
        android:textColor="@color/all_white"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_library_playlist_detail_share_song" />

</LinearLayout>
